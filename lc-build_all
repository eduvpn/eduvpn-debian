# example usage:
#  LC_SKIP_BUILD=yes ./lc-build_all

set -e

# list should be ordered by dependency

# FIXME is php-constant-time needed?
##PACKAGE_LIST="BaconQrCode
##    php-constant-time
##    vpn-ca
##[...]

# see also
# https://raw.githubusercontent.com/eduvpn/builder/master/build_packages.sh

PACKAGE_LIST="BaconQrCode
    vpn-ca
    php-saml-sp
    php-jwt
    php-otp-verifier
    php-oauth2-server
    php-secookie
    php-sqlite-migrate
    php-openvpn-connection-manager
    vpn-lib-common
    vpn-server-api
    vpn-server-node
    vpn-user-portal
    vpn-portal-artwork-eduVPN
    vpn-portal-artwork-LC
    php-json-signer
    php-saml-ds
    php-saml-ds-artwork-eduVPN"

if test -f ~/.pbuilderrc
then
    echo "$0: reusing existing ~/.pbuilderrc"
else
    cat <<EOT > ~/.pbuilderrc
# generated by $0
AUTO_DEBSIGN=${AUTO_DEBSIGN:-no}
HOOKDIR=/var/cache/pbuilder/hooks
USE_PDEBUILD_INTERNAL=yes
EXTRAPACKAGES="lintian eatmydata"
BINDMOUNTS="/var/cache/pbuilder/apt-archive"
OTHERMIRROR="deb [trusted=yes] file:///var/cache/pbuilder/apt-archive ./"
EATMYDATA=yes
EOT
fi

# FIXME ./le-repo_setup

if test -n "$LC_SKIP_BUILD"
then
    echo '***' "$O: skipping lc-build calls."
else
    # FIXME this might be needed after _every_ build?
    sudo pbuilder update

    for f in $PACKAGE_LIST
    do
        echo '***' "$0: building $f ..."
        (
            cd "$f" || exit
            ../lc-build
            # lc-build
        )
        echo '***' "$0: finished building $f."
    done
    echo '***' "$0: completed."
fi


# FIXME make it run lintian :
# joostvb@perun:/var/cache/pbuilder/apt-archive% lintian php-jwt_1.0.1-3_amd64.changes
# W: php-jwt source: maintainer-also-in-uploaders
# W: php-jwt source: changelog-should-mention-nmu
# W: php-jwt source: source-nmu-has-incorrect-version-number 1.0.1-3
# E: php-fkooman-jwt: extended-description-is-empty

# now it's time to reshuffle our repo
# in /var/cache/pbuilder/apt-archive

# create full-blown archive under /var/cache/pbuilder/debian/{dists,pool}/
# (offering deb http:// sources for apt) from content in
# /var/cache/pbuilder/apt-archive (offers only file:// sources for apt)

if test -n "$LC_SKIP_REPO"
then
    echo '***' "$0: skipping preparing repo for publishing."
else
    test -d /var/cache/pbuilder/debian || mkdir -p /var/cache/pbuilder/debian
    (
        cd /var/cache/pbuilder/debian
        test -d pool || mkdir pool
        cp -a ../apt-archive pool/main
        rm pool/main/{Packages,Sources}* || true

        mkdir -p dists/buster/main/binary-{all,i386,amd64}
        mkdir -p dists/buster/main/sources

        dpkg-scanpackages --arch i386 pool/main >dists/buster/main/binary-i386/Packages
        dpkg-scanpackages --arch amd64 pool/main >dists/buster/main/binary-amd64/Packages

        dpkg-scansources . >Sources

        # debian/dists/buster/Release
        apt-ftparchive release dists/$foo > Release


        # FIXME now it's time to sign Packages.xz

        # sign/create Release.gpg and InRelease :

        # FIXME path to lc-repo_sign ?
        gpg-agent --quiet --daemon lc-repo_sign
    )
fi

echo '***' "$0: finished creating and signing apt-able repo in /var/cache/pbuilder/debian."
echo '***' "$0: repo ready to rsync to e.g. https://repo.eduvpn.org/debian-stable/"

