# keep list ordered by dependency
PACKAGE_LIST="php-yubitwee
    php-secookie
    Twig-extensions
    php-oauth2-client
    php-oauth2-server
    php-otp-verifier
    php-saml-ds
    php-openvpn-connection-manager
