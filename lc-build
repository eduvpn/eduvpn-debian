# exit on errors
set -e

if test ! -f debian/control
then
   echo "$0: file debian/control not found."
   exit 1
fi

NAME=$(basename "${PWD}")
rm -rf build
mkdir -p build
uscan --destdir=build --download-current-version
(
  cd build
  echo '***' "$0: starting build in" `pwd`

  TARDIR="$( tar tf $NAME-*.tar.?? | grep '/$' | sort | head -1 )"
  tar -xf "$NAME"-*.tar.??
  cd "$TARDIR"

  cp -r ../../debian .

  # install build dependencies, build packages
  pdebuild
  echo '***' "$0: finished build in" `pwd` ", buildlog in .build"
)

# add package to repository
cp build/*.{deb,build,buildinfo,orig.tar.??,debian.tar.??,changes,dsc} \
 /var/cache/pbuilder/apt-archive/
(
  cd /var/cache/pbuilder/apt-archive/
  dpkg-scanpackages . >Packages
  # bzip2 -kf Packages
  gzip -kf Packages
  dpkg-scansources . >Sources
  gzip -kf Sources
  echo '***' "$0: updated archive in" `pwd`
)
